    "@vitejs/plugin-react": "^3.0.0",
    "lodash": "^4.17.21",
    "path": "^0.12.7",
    "prettier": "^2.8.6",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-packagejson": "^2.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^1.7.1"
